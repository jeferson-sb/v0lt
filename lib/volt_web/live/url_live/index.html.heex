<.modal :if={@live_action in [:new, :edit]} id="url-modal" show on_cancel={JS.patch(~p"/")}>
  <.live_component
    module={VoltWeb.UrlLive.FormComponent}
    id={@url.id || :new}
    title={@page_title}
    action={@live_action}
    url={@url}
    current_user={@current_user}
    patch={~p"/"}
  />
</.modal>
